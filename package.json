{
  "name": "lokicms-plugin-vault",
  "version": "1.0.0",
  "description": "Secure credential vault plugin for LokiCMS with encryption, expiration, and audit logging",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "lokicms",
    "plugin",
    "vault",
    "credentials",
    "secrets",
    "encryption",
    "security"
  ],
  "author": "MauricioPerera",
  "license": "MIT",
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MauricioPerera/lokicms-plugin-vault.git"
  }
}
